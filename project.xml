<project
    name = "fty-sensor-gpio"
    description = "Manage GPI sensors and GPO devices"
    script = "zproject.gsl"
    email = "EatonIPCOpenSource@eaton.com"
    url = "https://42ity.org"
    license = "GPL-2.0+"
    repository = "https://github.com/42ity/fty-sensor-gpio"
    >

    <target name = "debian" />
    <target name = "redhat" />
    <target name = "travis" />

    <include filename = "license.xml" />
    <version major = "1" minor = "0" patch = "0" />

    <use project = "czmq" min_major = "3" release = "v3.0.2" test = "zmsg_test"
        repository="https://github.com/42ity/czmq.git"/>
    <use project = "malamute" test = "mlm_server_test" />
    <use project = "fty-proto" libname = "libfty_proto" prefix="fty_proto"
        min_major = "1" min_minor = "0" min_patch = "0"
        repository = "https://github.com/42ity/fty-proto"
        test = "fty_proto_test">
        <use project = "malamute"/>
    </use>

    <!--class name = "fty_sensor_gpio_server">Actor</class-->
    <class name = "libgpio" stable = "1">General Purpose Input/Output lib</class>
    <class name = "fty-sensor-gpio-server">42ITy GPIO server</class>

    <main name = "fty-sensor-gpio" service = "1">Manage GPI sensors and GPO devices</main>

</project>
